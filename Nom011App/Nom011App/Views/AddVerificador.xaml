<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nom011App.View.AddVerificador">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nuevo Verificador"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Nombre Completo"></Label>
            <Entry Text="{Binding Nombre}"></Entry>
            <Label Text="Credencial"></Label>
            <Entry Text="{Binding NoId}"></Entry>
            <Button Text="Guardar" Command="{Binding SaveVerificador}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>