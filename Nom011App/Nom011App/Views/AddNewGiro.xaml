<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nom011App.Views.AddNewGiro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nuevo Giro"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Label Text="Clave"></Label>
            <Entry Text="{Binding Clave}"></Entry>
            <Label Text="Descripcion"></Label>
            <Entry Text="{Binding Descripcion}"></Entry>
            <Button x:Name="btnGuardar" Text="Guardar"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>