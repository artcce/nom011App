<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Nom011App.Views.AddNewVerificador">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nuevo Verificador"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Placeholder="Identificacion"  x:Name="IdVerificadorEntry"  TextColor="Black"></Entry>
            <Label Text="Nombre Completo" TextColor="Black"></Label>
            <Entry Placeholder="Nombre"   x:Name="Nombre"  TextColor="Black"></Entry>
            <Label Text="Credencial"  TextColor="Black"></Label>
            <Entry Placeholder="Identificacion"   x:Name="NoId"  TextColor="Black"></Entry>
            <Button x:Name="btnGuardar" Text="Guardar"  TextColor="Black"></Button>
           
        </StackLayout>
    </ContentPage.Content>
</ContentPage>